<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5"
    tools:context=".fragment.DownloadFragment">

    <!-- Step Progress Bar -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center">

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/step1_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_done"
                    android:padding="8dp"
                    android:src="@drawable/ic_check"
                    android:contentDescription="Step 1 Complete" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Introduction"
                    android:textSize="12sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Progress Line 1-2 -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.3"
                android:background="#4CAF50"
                android:layout_marginTop="-20dp" />

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/step2_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_active"
                    android:padding="8dp"
                    android:src="@drawable/ic_number2"
                    android:contentDescription="Step 2 Active" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sections"
                    android:textSize="12sp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Progress Line 2-3 -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.3"
                android:background="#E0E0E0"
                android:layout_marginTop="-20dp" />

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/step3_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_inactive"
                    android:padding="8dp"
                    android:src="@drawable/ic_number2"
                    android:contentDescription="Step 3 Inactive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multi Select"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Progress Line 3-4 -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.3"
                android:background="#E0E0E0"
                android:layout_marginTop="-20dp" />

            <!-- Step 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/step4_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_inactive"
                    android:padding="8dp"
                    android:src="@drawable/ic_number2"
                    android:contentDescription="Step 4 Inactive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Input Fields"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Progress Line 4-5 -->
            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="0.3"
                android:background="#E0E0E0"
                android:layout_marginTop="-20dp" />

            <!-- Step 5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/step5_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle_inactive"
                    android:padding="8dp"
                    android:src="@drawable/ic_flag"
                    android:contentDescription="Step 5 Inactive" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Form Submit"
                    android:textSize="12sp"
                    android:textColor="#9E9E9E"
                    android:gravity="center"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Scroll content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Step 1: Receipt -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_done"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Receipt Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 1: Introduction Receipt"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#2C2C2C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download your first receipt to get started with the process"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_download1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download Receipt"
                            android:layout_marginTop="12dp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#4CAF50"
                            android:textColor="@android:color/white"
                            app:iconGravity="textStart" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Step 2: Sections Receipt -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_active"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Sections Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 2: Sections Receipt"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#2C2C2C" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download receipt with different sections and categories"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_download2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Download Receipt"
                            android:layout_marginTop="12dp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#2196F3"
                            android:textColor="@android:color/white"
                            app:iconGravity="textStart" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Step 3: Multi Select Receipt -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F8F8F8"
                android:alpha="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_inactive"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Multi Select Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 3: Multi Select Receipt"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#9E9E9E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receipt with multiple selection options (Coming soon)"
                            android:textSize="14sp"
                            android:textColor="#BDBDBD"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_download3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coming Soon"
                            android:layout_marginTop="12dp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#E0E0E0"
                            android:textColor="#9E9E9E"
                            android:enabled="false" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Step 4: Input Fields Receipt -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F8F8F8"
                android:alpha="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_inactive"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Input Fields Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 4: Input Fields Receipt"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#9E9E9E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Receipt with various input field options (Coming soon)"
                            android:textSize="14sp"
                            android:textColor="#BDBDBD"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_download4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coming Soon"
                            android:layout_marginTop="12dp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#E0E0E0"
                            android:textColor="#9E9E9E"
                            android:enabled="false" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Step 5: Form Submit Receipt -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F8F8F8"
                android:alpha="0.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/circle_inactive"
                        android:src="@drawable/ic_flag"
                        android:padding="12dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="Form Submit Icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Step 5: Form Submit Receipt"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="#9E9E9E" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Final receipt after form submission (Coming soon)"
                            android:textSize="14sp"
                            android:textColor="#BDBDBD"
                            android:layout_marginTop="4dp"
                            android:lineSpacingExtra="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_download5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Coming Soon"
                            android:layout_marginTop="12dp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="#E0E0E0"
                            android:textColor="#9E9E9E"
                            android:enabled="false" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>